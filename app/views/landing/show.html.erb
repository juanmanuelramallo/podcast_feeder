<body class="min-h-screen min-w-screen diagonal-lines bg-black text-gray-200">
  <div class="flex flex-col justify-center my-80">
    <div class="mx-auto my-4 static">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-72 w-72 absolute mix-blend-overlay right-0" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="container mx-auto">
      <h1 class="font-serif text-4xl sm:text-6xl md:text-7xl h-20 text-center font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-yellow-300"><%= @podcast.title %></h1>
      <p class="font-sans text-center text-gray-400 mt-4"><%= @podcast.description %></p>
    </div>
  </div>

  <div class="container mx-auto grid grid-cols-1 gap-12 md:grid-cols-2">

    <% @episodes.each do |episode| %>
      <div class="flex flex-col justify-between bg-gray-800 rounded">
        <p class="p-4 morphing-diamonds font-bold"><%= episode.title %></p>
        <div class="flex-grow flex flex-col justify-between p-4">
          <p class="pb-4"><%= episode.description %></p>
          <div class="pb-4">
            <% if episode.audio_file.attached? %>
              <button class="rounded-full py-2 px-8 bg-yellow-300 text-black"
                      data-audio-src="<%= polymorphic_url(episode.audio_file) %>"
                >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
                Reproducir
              </button>
            <% end %>
          </div>
          <p><%= l episode.object.pub_date, format: '%B %-d, %Y' %></p>
        </div>
      </div>
    <% end %>

  </div>

  <div class="flex flex-col justify-center my-32">
    <div class="mx-auto">
      <div class="circle h-32 w-32 bg-gray-800 rounded-full flex flex-col justify-center mix-blend-exclusion">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-14 w-14 text-black" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>
</body>
