<p id="notice"><%= notice %></p>

<h1><%= @podcast.title %> - Episodes</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Pub date</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= l episode.pub_date, format: :long %></td>
        <td><%= episode.title %></td>
        <td><%= link_to 'Show', [@podcast, episode] %></td>
        <td><%= link_to 'Edit', edit_podcast_episode_path(@podcast, episode) %></td>
        <td><%= link_to 'Destroy', [@podcast, episode], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_podcast_episode_path(@podcast), class: 'btn btn-primary' %>
